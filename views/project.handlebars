<div class="text-center pt-12 w-1/2">
  <h2 class="text-lg font-bold p-4">{{name}}</h2>
  <p>{{description}}</p>
  <p class="italic text-sm p-2">Created by {{user.name}} on {{format_date date_created}}</p>
</div>

<div class="comment-container pt-12 pr-4 mr-12">
  <div class="w-full rounded-lg border p-4 mx-12 shadow-md mr-12">
    <h3 class="font-bold">Discussion</h3>
    <form>
      <div class="w-full px-3 my-2 justify-between flex">
        <textarea
          class="bg-white rounded leading-normal resize-none w-full h-12 py-2 px-3 font-medium placeholder-gray-300 focus:outline-none focus:bg-white border-b-2"
          id="comment-textarea"
          name="body"
          placeholder="comment here"
          required
        ></textarea>
        
          <input
            type="submit"
            class="btn px-1 py-1 bg-[#6f6866] rounded-md text-sm ml-2 hover:scale-105 hover:cursor-pointer"
            id="comment-submit"
            value="COMMENT"
          />
        
      </div>
      {{#each comments as |comment|}}
        <div class="flex flex-col">
          <div class="rounded-md p-3 ml-3 my-3">
            <div class="flex gap-3 items-center">
              <img src="/imgs/coffee.svg" class="object-cover w-8 h-8" />
              <h3 class="font-bold">{{comment.user.name}}</h3>
            </div>
            <p class="text-gray-600 mt-2 text-sm">{{comment.comments}}</p>
            {{#if comment.id}}
              <button
                data-id="{{comment.id}}"
                class="text-gray-400 mt-2 text-sm px-2 py-1 rounded-md"
                id="delcomment"
              >delete</button>
            {{else}}
              <div></div>
            {{/if}}
            <div class="border-b bg-gray-300 w-25 mt-2"></div>
          </div>
        </div>
      {{/each}}
    </form>
  </div>
</div>

<script src="/js/project.js"></script>